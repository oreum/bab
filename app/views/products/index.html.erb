<h1>상품목록</h1>

<table border="1">
  <tr>
    <th>상품명</th>
	<th>상세설명</th>
	<th>이미지</th>
	<th>가격</th>
	<th colspan="3"></th>
  </tr>

  <% @products.each do |product| %>
	<tr>
	  <td><%= product.title %></td>
	  <td><%= product.description %></td>
	  <td><%= product.image_url %></td>
	  <td><%= product.price %></td>
	  <td><%= link_to '보기', product_path(product) %></td>
	  <td><%= link_to '수정', edit_product_path(product) %></td>
	  <td><%= link_to '삭제', product_path(product),
	                method: :delete,
					data: { confirm: '정말 삭제하시겠습니까?' } %></td>
	</tr>
  <% end %>
</table>

<%= link_to '추가', new_product_path %>
